{
  "name": "stacks.js",
  "version": "1.0.0",
  "private": true,
  "prettier": "@stacks/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockstack/blockstack.js.git"
  },
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "@stacks/prettier-config": "^0.0.7",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.0",
    "typedoc": "^0.20.35"
  },
  "dependencies": {},
  "resolutions": {
    "rollup": "^2.28.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "clean:packages": "lerna run clean",
    "install:packages": "lerna run install",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"packages/**/src/**/*.{ts,tsx|!(d.ts)}\" -f unix",
    "lint:fix": "eslint \"packages/**/src/**/*.{ts,tsx}\" -f unix --fix",
    "lint:prettier": "prettier --check \"packages/**/src/**/*.{ts,tsx|!(d.ts)}\" *.js",
    "lint:prettier:fix": "prettier --write \"packages/**/src/**/*.{ts,tsx|!(d.ts)}\" *.js",
    "build:docs": "rimraf docs && cross-env typedoc --name \"Stacks.js $npm_package_version Library Reference\" --readme ./readme.md --tsconfig tsconfig.typedoc.json --out docs --json docs/docs.json packages/**/src",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck --parallel --no-bail --stream"
  }
}
