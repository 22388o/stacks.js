  "license": "GPL-3.0-or-later",
  "directories": {
    "lib": "lib",
    "dist": "dist",
    "test": "tests"
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Blockstack PBC",
    "email": "admin@blockstack.com",
    "url": "https://blockstack.com"
  },
  "contributors": [
    {
      "name": "Ken Liao"
    },
